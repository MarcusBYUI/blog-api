      "put": {
        "description": "Update a User",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "User",
            "in": "body",
            "description": "Update a User",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "Shawn"
                },
                "lastName": {
                  "type": "string",
                  "example": "Potter"
                },
                "age": {
                  "type": "number",
                  "example": 42
                },
                "email": {
                  "type": "string",
                  "example": "professor@byui.edu"
                },
                "password": {
                  "type": "string",
                  "example": "Potter11?"
                },
                "profession": {
                  "type": "string",
                  "example": "Professor"
                }
              },
              "required": [
                "firstName",
                "lastName",
                "age",
                "email",
                "password",
                "profession"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User successfully updated"
          },
          "422": {
            "description": "Please provide information to be updated, User does not exist, No update was made, Invalid user ID"
          }
        }
      },
      "delete": {
        "description": "Delete an existing user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "user successfully Deleted"
          },
          "422": {
            "description": "Kindly check the provided Id"
