            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "Shawn"
                },
                "lastName": {
                  "type": "string",
                  "example": "Potter"
                },
                "age": {
                  "type": "number",
                  "example": 42
                },
                "email": {
                  "type": "string",
                  "example": "professor@byui.edu"
                },
                "password": {
                  "type": "string",
                  "example": "Potter11?"
                },
                "profession": {
                  "type": "string",
                  "example": "Professor"
                }
              },
              "required": [
                "firstName",
                "lastName",
                "age",
                "email",
                "password",
                "profession"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User successfully added"
          },
          "422": {
            "description": "Kindly check the provided data"
          }
        }
      }
    },
